---
layout: null
permalink: '/sitemap.xml'
---
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
        xsi:schemaLocation="http://www.sitemaps.org/schemas/sitemap/0.9 http://www.sitemaps.org/schemas/sitemap/0.9/sitemap.xsd" 
        xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
  {%- for primary in nav.primary %}
  <url>
    <loc>{{ nav.siteurl }}{{ primary.href | url }}</loc>
    {%- if primary.lastmod %}
    <lastmod>{{ primary.lastmod | date: "%Y-%m-%dT%H:%M:%S+00:00" }}</lastmod>
    {%- else %}
    <lastmod>{{ "now" | date: "%Y-%m-%dT%H:%M:%S+00:00" }}</lastmod>
    {%- endif %}
    <changefreq>monthly</changefreq>
    {%- if primary.text == "Home" %}
    <priority>1.0</priority>
    {%- else %}
    <priority>0.7</priority>
    {%- endif %}
  </url>
  {%- endfor %}
  {%- for doc in collections.policy %}
  <url>
    <loc>{{ nav.siteurl }}{{ doc.url | url }}</loc>
    {%- if doc.data.lastmod %}
    <lastmod>{{ doc.data.lastmod | date: "%Y-%m-%dT%H:%M:%S+00:00" }}</lastmod>
    {%- else %}
    <lastmod>{{ "now" | date: "%Y-%m-%dT%H:%M:%S+00:00" }}</lastmod>
    {%- endif %}
    {%- if doc.data.changefreq %}
    <changefreq>{{ page.sitemap.changefreq }}</changefreq>
    {%- else %}
    <changefreq>monthly</changefreq>
    {%- endif %}
    {%- if doc.data.priority %}
    <priority>{{ page.sitemap.priority }}</priority>
    {%- else %}
    <priority>0.5</priority>
    {%- endif %}
  </url>
  {%- endfor %}
</urlset>
